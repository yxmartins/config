    source ~/files/sec/mutt

# BASIC info
    set my_email_adress = "$my_email1"
    set my_pass = "$my_pass1"
    set realname = "$my_name1"
    set my_imap = "$my_imap1"
    set my_smtp = "$my_smtp1"

# SERVER config
## SSL
    set ssl_starttls=yes
    set ssl_force_tls=yes
    set certificate_file ="~/.mutt/accounts/1/certificates"
## IMAP
    set imap_user = "$my_email_adress"
    set imap_pass = "$my_pass"
    unset imap_passive
    unset imap_peek
## SMTP
    set smtp_url="smtps://$my_email_adress@$my_smtp:465/"
    set smtp_pass = "$my_pass"
## connecting the folders
    unmailboxes *
    set from = "$my_email_adress"
    set folder = "imaps://$my_imap"
    set spoolfile = "=Inbox"
    set postponed = "=Drafts"
    set record = "=Sent"
    set trash = "=Trash"
    set header_cache = ~/.mutt/accounts/1/cache/headers
    set message_cachedir = ~/.mutt/accounts/1/cache/bodies 

# MAIL config
## status bar format. including signature
    set status_format = "$my_email_adress %f | Messages: %m, %l"
    set signature = "~/.mutt/accounts/1/signature"
## setting the colorscheme
    source ~/.mutt/accounts/1/colors
## Sidebar
### start with visible sidebar. sidebar width. sidebar format.
    set sidebar_visible=yes
    set sidebar_width=20
    set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
    set sidebar_divider_char = ' '
    set mail_check_stats=no
###  mailboxes listed in the sidebar
    mailboxes =Inbox 
    mailboxes =Drafts 
    mailboxes =Sent 
    mailboxes =Trash 
    mailboxes ~/tmp/attach
### simplify the mailboxes names
    set sidebar_short_path 
    set sidebar_delim_chars="/" 


