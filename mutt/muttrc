# ACCOUNTS config
## including accounts
    folder-hook '1rc' 'source mutt/accounts/1rc'
    folder-hook '2rc' 'source mutt/accounts/2rc'
    folder-hook '3rc' 'source mutt/accounts/3rc'
    folder-hook '4rc' 'source mutt/accounts/4rc'
## defining default account
    source ~/.mutt/accounts/1rc         
## macros for switching accounts
    macro index <f1> '<sync-mailbox><enter-command>source ~/.mutt/accounts/1rc<enter><change-folder>!<enter>'
    macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/accounts/2rc<enter><change-folder>!<enter>'
    macro index <f3> '<sync-mailbox><enter-command>source ~./mutt/accounts/3rc<enter><change-folder>!<enter>'
    macro index <f4> '<sync-mailbox><enter-command>source ~/.mutt/accounts/4rc<enter><change-folder>!<enter>'
    macro generic \Cx| "<enter-command>source"
    macro generic \Cx& "<enter-command>macro index \\t \"\\Cx"
    macro index <tab> "\Cx0"
    macro generic \Cx0 "\Cx| ~/.mutt/accounts/1rc\"\n\Cx&1\"<enter><change-folder>!<enter>"
    macro generic \Cx1 "\Cx| ~/.mutt/accounts/2rc\"\n\Cx&2\"<enter><change-folder>!<enter>"
    macro generic \Cx2 "\Cx| ~/.mutt/accounts/3rc\"\n\Cx&3\"<enter><change-folder>!<enter>"
    macro generic \Cx3 "\Cx| ~/.mutt/accounts/4rc\"\n\Cx&0\"<enter><change-folder>!<enter>"


# SETTINGS
## including additional settings
    source ~/.mutt/settings

