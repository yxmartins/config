<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc"> 
    <resistance>
        <strength>10</strength>
        <screen_edge_strength>20</screen_edge_strength>
    </resistance>
    <focus>
        <focusNew>yes</focusNew>
        <followMouse>no</followMouse>
        <focusLast>yes</focusLast>
        <underMouse>no</underMouse>
    </focus>
    <placement>
        <policy>Smart</policy>
        <center>yes</center>
        <monitor>Active</monitor>
        <primaryMonitor>Active</primaryMonitor>
    </placement>
    <theme>
        <name>Lubuntu-default</name>
        <titleLayout>NLIMC</titleLayout>
        <keepBorder>no</keepBorder>
        <animateIconify>no</animateIconify>
        <font place="ActiveWindow">
            <name>Liberation Mono</name>
            <size>11</size>
            <weight>Normal</weight>
            <slant>Normal</slant>
        </font>
        <font place="InactiveWindow">
            <name>Liberation Mono</name>
            <size>11</size>
            <weight>Normal</weight>
            <slant>Normal</slant>
        </font>
        <font place="MenuHeader">
            <name>Liberation Mono</name>
            <size>11</size>
            <weight>Normal</weight>
            <slant>Normal</slant>
        </font>
        <font place="MenuItem">
            <name>Liberation Mono</name>
            <size>11</size>
            <weight>Normal</weight>
            <slant>Normal</slant>
        </font>
        <font place="ActiveOnScreenDisplay">
            <name>Liberation Mono</name>
            <size>11</size>
            <weight>Normal</weight>
            <slant>Normal</slant>
        </font>
        <font place="InactiveOnScreenDisplay">
            <name>Liberation Mono</name>
            <size>11</size>
           <weight>Normal</weight>
           <slant>Normal</slant>
        </font>
    </theme>
    <desktops>
        <number>1</number>
        <firstdesk>1</firstdesk>
        <names/>
        <popupTime>0</popupTime>
    </desktops>
    <resize>
        <drawContents>no</drawContents>
        <popupShow>Nonpixel</popupShow>
        <popupPosition>Center</popupPosition>
    </resize>
    <margins>
         <top>0</top>
        <bottom>0</bottom>
        <left>0</left>
        <right>0</right>
    </margins>
    <applications>
        <application class="*">
            <decor>no</decor>
            <maximized>yes</maximized>
        </application>
    </applications>
    <keyboard>
        <!-- keybind for windows management -->
        <keybind key="C-4">
            <action name="Close"/>
        </keybind>
        <keybind key="A-Down">
            <action name="Unmaximize">
                <direction>both</direction>
            </action>
            <action name="MoveResizeTo">
                <width>75%</width>
                <height>75%</height>
                <x>center</x>
                <y>center</y>
            </action>
        </keybind>
        <keybind key="A-Up">
            <action name="ToggleMaximize">
                <direction>both</direction>
            </action>
        </keybind>
        <keybind key="A-Left">
            <action name="ToggleShowDesktop">
                <strict>yes</strict>
            </action>
            <action name="PreviousWindow">
                <dialog>none</dialog>
                <bar>no</bar>
                <raise>no</raise>
                <allDesktops>yes</allDesktops>
                <panels>no</panels>
                <linear>yes</linear>
                <interactive>no</interactive>
            </action>
        </keybind>
        <keybind key="A-Right">
            <action name="ToggleShowDesktop">
                <strict>yes</strict>
            </action>
            <action name="NextWindow">
                <dialog>none</dialog>
                <bar>no</bar>
                <panels>no</panels>
                <linear>yes</linear>
                <raise>no</raise>
                <interactive>no</interactive>
            </action>
        </keybind>
        <keybind key="F11">
            <action name="ToggleFullscreen"/>
        </keybind>
        <!-- Keybinding for panel -->
        <keybind key="C-Down">
            <action name="Execute">
                <command>pkill tint2</command>
            </action>
        </keybind>
        <keybind key="C-Up">
            <action name="Execute">
                <command>tint2</command>
            </action>
        </keybind>
        <!-- Keybinding for volume and brightness -->
        <keybind key="XF86AudioRaiseVolume">
            <action name="Execute">
                <command>amixer -q sset Master 3%+ unmute</command>
            </action>
        </keybind>
        <keybind key="XF86AudioLowerVolume">
            <action name="Execute">
                <command>amixer -q sset Master 3%- unmute</command>
            </action>
        </keybind>
         <keybind key="C-0">
            <action name="Execute">
                <command>amixer -q sset Master 3%+ unmute</command>
            </action>
        </keybind>
        <keybind key="C-9">
            <action name="Execute">
                <command>amixer -q sset Master 3%- unmute</command>
            </action>
        </keybind>
         <keybind key="A-0">
            <action name="Execute">
                <command>xbacklight -inc 10%</command>
            </action>
        </keybind>
        <keybind key="A-9">
            <action name="Execute">
                <command>xbacklight -dec 10%</command>
            </action>
        </keybind>
       <!-- keybindings for applications -->
        <keybind key="Print">
            <action name="Execute">
                <command>flameshot gui</command>
            </action>
        </keybind>
        <keybind key="F12">
            <action name="Execute">
                <command>jumpapp -f -p firefox</command>
            </action>
        </keybind>
        <keybind key="F10">
            <action name="Execute">
                <command>jumpapp -f -p lxterminal</command>
             </action>
         </keybind>
     </keyboard>
    <mouse>
    <doubleClickTime>200</doubleClickTime>
    <screenEdgeWarpTime>0</screenEdgeWarpTime>
    <screenEdgeWarpMouse>false</screenEdgeWarpMouse>
        <context name="Root">
            <mousebind button="Right" action="Press">
                <action name="ShowMenu">
                    <menu>root-menu</menu>
                </action>
            </mousebind>
        </context>
    </mouse>
</openbox_config>
