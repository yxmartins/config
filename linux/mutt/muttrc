
# ACCOUNTS config
    folder-hook '1rc' 'source mutt/accounts/1rc'
    folder-hook '2rc' 'source mutt/accounts/2rc'
## Default account
    source ~/.mutt/accounts/1rc         
## Macros for switching accounts
    macro index <esc>1 '<sync-mailbox><enter-command>source mutt/accounts/1rc<enter><change-folder>!<enter>'
    macro index <esc>2 '<sync-mailbox><enter-command>source mutt/accounts/2rc<enter><change-folder>!<enter>'

# MUTT config
## ask before quit
    set quit = ask-yes
    set markers = no
## setting vim (in the insert mode with markdown syntax) to write emails
    set edit_headers
    set editor = "vim -c 'set ft=markdown' -c 'startinsert'"
## add a tilde in the end of the mail list (like in Vim)
    set tilde
## dont ask to save a message as a draft
    set postpone=ask-no
    set recall=no
## don show the "Press any key to continue..." message.
    set wait_key=no

# HOTKEYS config
## "d" to delete tagged or the current mail
    macro index d ":set confirmappend=no delete=yes\n<tag-prefix><save-message>=Trash\n<sync-mailbox>:set confirmappend=yes delete=ask-yes\n"
## "r" to reply to all
    bind index,pager r group-reply
## disable help bar. ctrl+h to desiplay it.
    set help=no
    macro index,pager \Ch ":toggle help<enter>:set ?help<enter>"
# "g-" to change the mail box
    macro index gi "<change-folder>=Inbox<enter>"
    macro index gt "<change-folder>=Trash<enter>"
    macro index gs "<change-folder>=Sent<enter>"
    macro index gd "<change-folder>=Drafts<enter>"
## sidebar navigation
    bind index,pager n sidebar-next
    bind index,pager N sidebar-prev
    bind index,pager \cn  sidebar-open
## using up/down arrows to read a mail
    bind pager <up> previous-line
    bind pager <down> next-line
## show/hide sidebar
    macro index <tab> '<enter-command>toggle sidebar_visible<enter><refresh>'
    macro pager <tab> '<enter-command>toggle sidebar_visible<enter><redraw-screen>'

## "f5" to verify for new emails
    bind index <f5> imap-fetch-mail
